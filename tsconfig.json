{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
